{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    // üß† Alias-Pfade
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@/components/*": ["components/*"],
      "@/lib/*": ["lib/*"],
      "@/hooks/*": ["hooks/*"],
      "@/services/*": ["services/*"],
      "@/styles/*": ["styles/*"],
      "@/types/*": ["types/*"],
      "@/utils/*": ["utils/*"]
    },

    // ‚úÖ Next.js Plugin
    "plugins": [{ "name": "next" }]
  },

  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "src/**/*",
    "src/types/**/*.d.ts"       // ‚Üê ‚úÖ wichtig f√ºr custom types wie next-auth
  ],

  "exclude": ["node_modules"]
}
